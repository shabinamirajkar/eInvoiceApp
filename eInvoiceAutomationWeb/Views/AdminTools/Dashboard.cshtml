
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Dashboard</h4>
    

<div class="row" style="width:100%">

        <div class="col-sm-12">

            <div class="kendotabstrip">
                @(Html.Kendo().TabStrip().Name("Dashboardtabstrip")
                    .Animation(true)
                    .Items(tabstrip =>
                    {
                        tabstrip.Add().Text("Worklist")                         
                            .Selected(true)
                            .LoadContentFrom("Index", "AdminTools");
                        if (ViewBag.AddSavedInvoiceTab)
                            {
                            tabstrip.Add().Text("Invoices Saved by Me")
                               .LoadContentFrom("SavedInvoice", "AdminTools");
                            }
                        tabstrip.Add().Text("Activity Report")
                            .LoadContentFrom("Report", "AdminTools");
                        if (ViewBag.AddSavedInvoiceTab)
                            {
                            tabstrip.Add().Text("All WorkList")
                                .LoadContentFrom("AllWorklistAll", "AdminTools");
                            }
                        //if (ViewBag.AddErrorLogReportTab)
                        //{
                        //    tabstrip.Add().Text("Error Log Report")
                        //      .LoadContentFrom("ErrorLogReport", "AdminTools");
                        //}
                    }))
            </div>
        </div>
 </div>


<script type="text/javascript">

    (function ($) {
        $(document).ready(function () {
           if ($("#Dashboardtabstrip") != null) {
                var tabs = $("#Dashboardtabstrip").kendoTabStrip().data("kendoTabStrip");
                tabs.tabGroup.on('click', 'li', function (e) {
                    tabs.reload($(this));
                });
             }
        });
    })(jQuery);
</script>





