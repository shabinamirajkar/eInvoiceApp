@using System.Collections
@using Kendo.Mvc.UI

@model string

@(Html.Kendo().DropDownList()
    .BindTo((IEnumerable)ViewBag.Roles)
    .DataValueField("RoleID")
        .DataTextField("RoleAbbreviation")
        .Name("RoleID").HtmlAttributes(new { @Style = "font-size:12px;" })
    .Events(e =>
     {
         e.Change("onChange");
     })
   .OptionLabel("- please select -")
)