@using System.Collections
@using Kendo.Mvc.UI

@(Html.Kendo().NumericTextBox<decimal>()
     .Name("InvoiceAmount")
     .Min(0)
    // .Max(99999999999999999)
     .Decimals(2)
     
)


<script type="text/javascript">
        $(document).ready(function () {
            //Allow Max character of 17
            $("input[data-role='numerictextbox']").attr('maxlength', '17');
        });
</script>


